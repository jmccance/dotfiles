[core]
  editor = vim
  excludesfile = ~/.config/git/ignore
  pager = delta

[commit]
  gpgsign = true

[credential]
  helper = osxkeychain

[delta]
  light = false
  line-numbers = true
  navigate = true

[diff]
  colorMoved = default

[interactive]
  diffFilter = delta --color-only

[merge]
  conflictStyle = diff3

[push]
  default = current

[rebase]
  autosquash = true

[rerere]
  enabled = true

[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
